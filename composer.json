{
  "name":"heart-bits/contao-backend-theme-bundle",
  "description":"heart-bits Backend Theme",
  "keywords":["contao", "bundle", "backend", "theme"],
  "type":"contao-bundle",
  "license":"LGPL-3.0+",
  "authors":[
    {
      "name":"heart-bits",
      "homepage":"https://www.heart-bits.com",
      "role":"Developer"
    }
  ],
  "support":{
  	"email": "hi@heart-bits.com",
		"issues":"https://github.com/heart-bits/hb-backend-theme/issues",
		"source":"https://github.com/heart-bits/hb-backend-theme"
	},
  "require":{
    "php":">=7.1.0",
    "contao/core-bundle": "^4.13.5"
  },
  "require-dev": {
    "contao/manager-plugin": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Heartbits\\ContaoBackendTheme\\": "src/"
    },
    "classmap": [
      "src/Resources/contao/"
    ],
    "exclude-from-classmap": [
      "src/Resources/contao/config/",
      "src/Resources/contao/dca/",
      "src/Resources/contao/languages/",
      "src/Resources/contao/templates/",
      "src/Resources/contao/themes/"
    ]
  },
  "extra": {
    "contao-manager-plugin": "Heartbits\\ContaoBackendTheme\\ContaoManager\\Plugin"
  }
}
